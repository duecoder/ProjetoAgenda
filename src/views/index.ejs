<%- include('includes/head') %> <%- include('includes/navbar') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Agenda</h1>
      <p class="text-center lead">Seus contatos são exibidos abaixo.</p>

      <%- include('includes/messages') %> <% if(contatos.length > 0) { %>
      <div class="responsive-table">
        <table class="table my-2">
          <% contatos.forEach(contato => { %>
          <tr>
            <td><%= contato.nome %></td>
            <td><%= contato.sobrenome %></td>
            <td><%= contato.email %></td>
            <td><%= contato.telefone %></td>
            <td>
              <a href="/contato/index/<%= contato.id %>"
                ><button class="btn btn-primary btn-sm">Editar</button></a
              >
            </td>
            <td>
              <a class="text-danger" href="/contato/delete/<%= contato.id %>"
                ><button class="btn btn-danger btn-sm">Excluir</button></a
              >
            </td>
          </tr>

          <% }); %>
        </table>
      </div>
      <% } else { %>
      <p class="lead text-center">Você ainda não tem contatos registrados.</p>
      <% } %>
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
